<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        android:textSize="24sp"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

    <TextView
        android:id="@+id/textView_allergenDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/text_allergen_recap"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_nuts" />

    <TextView
        android:id="@+id/textView_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_allergenDescription"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_gluten"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_gluten"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_profile" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_lactose"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_lactose"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_gluten" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_eggs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_eggs"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_lactose" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_moluscs"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_moluscs"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_eggs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_fish"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_fish"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_moluscs" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_soy"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_soy"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_fish" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_nuts"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="@string/switch_nuts"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch_soy" />

    <Button
        android:id="@+id/button_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button"
        android:layout_marginBottom="64dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>